@model IEnumerable<Cinema.Models.Table_Chair>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_User.cshtml";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">รายการเกาอี้</h3>
    </div>
    <div class="panel-body">
        <table id="myTable" class="table table-striped table-bordered" style="width: 100%">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.C_NameChair)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.C_Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.C_SatatusID)
                </th>
                @*<th></th>*@
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.C_NameChair)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.C_Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Table_StatusChire.S_NameSta)
                    </td>
                    @*<td style="text-align: center">
                            @Html.ActionLink("แก้ไข", "EditChir", null, new { id = item.C_ChairID }, new { @class = "btn btn-warning" })
                        </td>*@
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/datatables.min.js"></script>
    <link href="~/Content/datatables.min.css" rel="stylesheet"/>
    <script>

    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#myTable').DataTable();
        });
    </script>

}