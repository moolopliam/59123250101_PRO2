@model Cinema.Models.Table_Screen

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_User.cshtml";
}
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-7">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">แก้ไขข้อมูล</h3>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        @Html.HiddenFor(model => model.S_ScreenID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.S_MovieID, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.DropDownList("S_MovieID", null, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.S_MovieID, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.S_CinemaID, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.DropDownList("S_CinemaID", null, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.S_CinemaID, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.S_DateSN, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.S_DateSN, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.S_DateSN, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.S_TimeSN, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.S_TimeSN, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.S_TimeSN, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="บันทึก" class="btn btn-success"/>
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("ย้อนกลับ", "Index", null, new {@class = "btn btn-primary"})
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}