@model Cinema.Models.Table_Movie

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_User.cshtml";
}

<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-7">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">แก้ไขข้อมูล</h3>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("Edit", "Movie", FormMethod.Post,
                    new {enctype = "multipart/form-data"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(Model => Model.M_PicMovie)
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        @Html.HiddenFor(model => model.M_MovieID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.M_NameMovie, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.M_NameMovie, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.M_NameMovie, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.M_DateInMovie, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.M_DateInMovie, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.M_DateInMovie, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.M_DateOutMovie, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.M_DateOutMovie, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.M_DateOutMovie, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.UplPostedFile, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.UplPostedFile, new {htmlAttributes = new {@class = "form-control"}, type = "file"})
                                @Html.ValidationMessageFor(model => model.UplPostedFile, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.M_MovieStatus, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.DropDownList("M_MovieStatus", null, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.M_MovieStatus, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="บันทึก" class="btn btn-success"/>
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("ย้อนกลับ", "Index", null, new {@class = "btn btn-primary"})
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}