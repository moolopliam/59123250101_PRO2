@model Cinema.Models.Table_Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_User.cshtml";
}

<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-7">
        <div class="panel panel-info ">
            <div class="panel-heading">
                <h3 class="panel-title">รายละเอียด</h3>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dd>
                        @if (Model.M_PicMovie != null)
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.M_PicMovie)" width="250" height="250" class="img-rounded">
                        }
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.M_NameMovie)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.M_NameMovie)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.M_DateInMovie)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.M_DateInMovie)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.M_DateOutMovie)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.M_DateOutMovie)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.M_MovieStatus)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Table_StatusMovie.S_NameStatus)
                    </dd>

                </dl>

                <p>
                    @Html.ActionLink("แก้ไข", "Edit", null, new {Model.M_MovieID}, new {@class = "btn btn-warning"})
                    @Html.ActionLink("ย้อนกลับ", "Index", null, new {@class = "btn btn-primary"})
                </p>
            </div>
        </div>
    </div>
</div>