@model IEnumerable<Cinema.Models.Table_DetailOder>

@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_User.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">ข้อมูลการซื้อ</h3>
    </div>
    <div class="panel-body">
        <table id="myTable" class="table table-striped table-bordered" style="width: 100%">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Table_Chair.C_NameChair)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Table_Chair.C_Price)
                </th>
                <th>
                    @Html.DisplayName("ชื่อโรง")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Table_Chair.Table_Screen.Table_Movie.M_NameMovie)
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Table_Chair.C_NameChair)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Table_Chair.C_Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Table_Chair.Table_Screen.Table_Cinema.C_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Table_Chair.Table_Screen.Table_Movie.M_NameMovie)
                    </td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <td>ราคารวม</td>
                <td>@ViewBag.totoalP.ToString()</td>
                <td></td>
                <td></td>
            </tr>
            </tfoot>
        </table>
        @Html.ActionLink("ย้อนกลับ", "Index", "OderAdmin", null, new {@class = "btn btn-info"})
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/datatables.min.js"></script>
    <link href="~/Content/datatables.min.css" rel="stylesheet"/>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#myTable').DataTable();
        });
    </script>
}