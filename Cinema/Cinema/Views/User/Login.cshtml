@model Cinema.Models.Table_User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<style>
    .login-container {
        margin-bottom: 5%;
        margin-top: 5%;
    }

    .login-form-1 {
        box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
        padding: 5%;
    }

    .login-form-1 h3 {
        color: #333;
        text-align: center;
    }

    .login-form-2 {
        background: #0062cc;
        box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
        padding: 5%;
    }

    .login-form-2 h3 {
        color: #fff;
        text-align: center;
    }

    .login-container form { padding: 10%; }

    .btnSubmit {
        border: none;
        border-radius: 1rem;
        cursor: pointer;
        padding: 1.5%;
        width: 50%;
    }

    .login-form-1 .btnSubmit {
        background-color: #0062cc;
        color: #fff;
        font-weight: 600;
    }

    .login-form-2 .btnSubmit {
        background-color: #fff;
        color: #0062cc;
        font-weight: 600;
    }

    .login-form-2 .ForgetPwd {
        color: #fff;
        font-weight: 600;
        text-decoration: none;
    }

    .login-form-1 .ForgetPwd {
        color: #0062cc;
        font-weight: 600;
        text-decoration: none;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="container login-container">
        <div class="row">
            <div class="col-md-3 ">
            </div>
            <div class="col-md-6 login-form-2">
                <h3>เข้าสู่ระบบโรงหนัง</h3>
                <form>
                    <div class="form-group">
                        @Html.EditorFor(model => model.U_EmailID, new {htmlAttributes = new {@class = "form-control dd", placeholder = "อีเมลล์ของคุณ *"}})
                        @Html.ValidationMessageFor(model => model.U_EmailID, "", new {@class = "text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.U_Password, new {htmlAttributes = new {@class = "form-control dd", placeholder = "รหัสผ่านของคุณ *",@Type="password"}})
                        @Html.ValidationMessageFor(model => model.U_Password, "", new {@class = "text-danger"})
                    </div>
                    <div class="form-group" style="text-align: center">
                        <input type="submit" class="btnSubmit" value="เข้าสู่ระบบ"/>
                    </div>
                    <div class="form-group">
                        <a href="@Url.Action("register", "User")" class="btn btn-success" value="Login">สมัครสมาชิก</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}